
__version__ = (1, 2, 0)


import os

import git
from telethon.utils import get_display_name

from .. import loader, main, utils


@loader.tds
class PremiumInfoMod(loader.Module):
    """Premium emoji info by amore <3"""

    strings = {"name": "PremiumInfo"}

    def __init__(self):
        self.config = loader.ModuleConfig(
            loader.ConfigValue(
                "owner",
                "<emoji document_id=6048540195995782913>üë§</emoji>",
                doc=lambda: "Owner custom emoji",
            ),
            loader.ConfigValue(
                "version",
                "<emoji document_id=6050744746874244036>‚ÑπÔ∏è</emoji>",
                doc=lambda: "Version custom emoji",
            ),
            loader.ConfigValue(
                "uptime",
                "<emoji document_id=5764783998945464490>‚è≤</emoji>",
                doc=lambda: "Uptime custom emoji",
            ),
            loader.ConfigValue(
                "prefix",
                "<emoji document_id=6041858261970324774>üí¨</emoji>",
                doc=lambda: "Prefix custom emoji",
            ),
            loader.ConfigValue(
                "upd_r",
                (
                    "<emoji document_id=5776235811980709241>üìä</emoji> Outdated version"
                    " </b><code>.update</code><b>"
                ),
                doc=lambda: "Update required custom emoji",
            ),
            loader.ConfigValue(
                "upd_to",
                "<emoji document_id=5776414066008395465>üìä</emoji> Actual version",
                doc=lambda: "Actual required custom emoji",
            ),
            loader.ConfigValue(
                "platform",
                "<emoji document_id=5812064725516684683>üîµ</emoji>",
                doc=lambda: "Actual required custom emoji",
            ),
            loader.ConfigValue(
                "Media",
                "https://te.legra.ph/file/f84fd6c49d4672bd74827.jpg",
                lambda: "Your custom media",
            ),
        )

    async def client_ready(self):
        if not (await self._client.get_me()).premium:
            raise loader.LoadError(
                "‚≠êÔ∏è This module is available only to Telegram Premium subscribers"
            )
        self._me = await self._client.get_me()

    async def pinfocmd(self, message):
        """Custom emoji info"""

        reply = await message.get_reply_message()

        media = self.config["Media"]
        owner = self.config["owner"]
        vrs = self.config["version"]
        upt = self.config["uptime"]
        pref = self.config["prefix"]
        upd_r = self.config["upd_r"]
        upd_to = self.config["upd_to"]
        platf = self.config["platform"]

        ver = utils.get_git_hash() or "Unknown"
        try:
            repo = git.Repo()
            diff = repo.git.log(["HEAD..origin/master", "--oneline"])
            upd = f"{upd_r}" if diff else f"{upd_to}"
        except Exception:
            upd = ""

        me = (
            "<b><a"
            f' href="tg://user?id={self._me.id}">{utils.escape_html(get_display_name(self._me))}</a></b>'
        )
        version = f'<i>{".".join(list(map(str, list(main.__version__))))}</i>'
        build = (
            f'<a href="https://github.com/hikariatama/Hikka/commit/{ver}">#{ver[:8]}</a>'
        )
        prefix = f"¬´<code>{utils.escape_html(self.get_prefix())}</code>¬ª"
        uptime = utils.formatted_uptime()
        platform = (
            f"{platf} Lavhost"
            if "LAVHOST" in os.environ
            else (
                f"{platf} VDS{platf} Termux"
                if "com.termux" in os.environ.get("PREFIX", "")
                else (
                    f"{platf} VDS{platf} Goorm"
                    if "GOORM" in os.environ
                    else (
                        f"{platf} VDS{platf} Railway"
                        if "RAILWAY" in os.environ
                        else f"{platf} VDS"
                    )
                )
            )
        )

        hikka = (
            "<b><emoji document_id=5213123182378098899>üí®</emoji> Premium info</b>\n"
            f"<b>{owner} Owner: {me}</b>\n\n"
            f"<b>{vrs} Version: </b>{version} {build}\n"
            f"<b>{upd}</b>\n"
            f"<b>{upt} Uptime: {uptime}</b>\n\n"
            f"<b>{pref} Prefix: </b>{prefix}\n\n"
            f"{platform}\n"
        )

        await message.delete()
        await self._client.send_file(
            message.peer_id,
            media,
            caption=hikka,
            link_preview=False,
            reply_to=reply.id if reply else None,
        )
